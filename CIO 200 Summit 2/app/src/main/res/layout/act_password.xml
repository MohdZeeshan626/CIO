<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <cyd.awesome.material.AwesomeText
                android:id="@+id/backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:awesome_font="material_design"
                app:awesome_icon="MD_ARROW_BACK" />

            <com.webmobi.gecmedia.CustomViews.TxtVCustomFonts
                android:id="@+id/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backward"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="36sp"
                app:customFont="@string/roboto_regular_light" />


            <com.webmobi.gecmedia.CustomViews.TxtVCustomFonts
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Make sure your password has at least 8 characters. Your password must contain a numerical and uppercase and not have any spaces."
                android:textColor="@color/white"
                android:textSize="18sp"
                app:customFont="@string/roboto_regular" />


            <com.webmobi.gecmedia.CustomViews.TxtVCustomFonts
                android:id="@+id/h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@+id/show"
                android:text="Type Password"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:customFont="@string/roboto_regular" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/act_edittextback"
                android:inputType="textPassword"
                android:textColor="@color/white" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:src="@drawable/next_selection" />


        </RelativeLayout>


    </ScrollView>

</LinearLayout>