<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/MyAppbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_secondaction_border"
            android:fitsSystemWindows="true"
            android:visibility="visible">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff4f6fa"
                android:backgroundTint="#fff4f6fa"
                android:fitsSystemWindows="true"
                app:contentScrim="#fff4f6fa"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#fff4f6fa"
                    app:layout_collapseMode="pin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


                        <ImageView
                            android:id="@+id/title_left_ic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/eventdate"
                            android:padding="10dp"
                            android:src="@drawable/menu_left_ic"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="20dp"
                            android:text="webMOBI"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/title_right_ic"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/title_right_ic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="4dp"
                            android:adjustViewBounds="true"
                            android:layout_toLeftOf="@+id/eventdate"
                            android:background="@drawable/healthprof"
                            android:padding="10dp"
                            android:src="@drawable/user"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.Toolbar>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:id="@+id/expandedImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_marginTop="?attr/actionBarSize"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:src="@drawable/cimage1"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7" />

                    <TextView
                        android:id="@+id/title_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expandedImage"
                        android:layout_centerHorizontal="true"
                        android:text="webMOBI"
                        android:fontFamily="@string/rubic_regular"
                        android:textStyle="bold"
                        android:textColor="#F814A7"
                        android:textSize="26sp"
                        android:visibility="visible"
                        />
                </RelativeLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


            <!--<include
                android:id="@+id/sact_bar1"
                layout="@layout/second_action_bar" />-->


        </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.webmobi.gecmedia.CustomViews.DilatingDotsProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:color="@color/colorPrimary"
                android:radius="3dp"
                android:visibility="gone"
                app:dd_animationDuration="500"
                app:dd_horizontalSpacing="4dp"
                app:dd_numDots="4"
                app:dd_scaleMultiplier="1.5" />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/l11"
                    android:layout_width="match_parent"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="#fff4f6fa"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/p1"
                        android:background="#fff4f6fa"
                        android:layout_marginTop="1dp"

                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pri"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/private2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Passphrase"
                            android:layout_toRightOf="@+id/pri"
                            android:layout_marginLeft="8dp"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:fontFamily="@string/roboto_regular"

                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_gravity="end" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/p1"
                        android:background="@drawable/speakerbackground"
                        >

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:padding="1dp"
                            android:layout_marginTop="4dp"
                            android:id="@+id/pri1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/passwordimg"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Can't find an app?"
                            android:id="@+id/c1"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/pri1"
                            android:layout_marginTop="3dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="18sp"
                            android:textColor="#ff2d3142"
                            android:layout_gravity="end" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/c2"
                            android:text="Some apps contain private information and require a passphrase from the app admin"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/c1"
                            android:layout_marginTop="5dp"
                            android:gravity="center"

                            android:textSize="14sp"
                            android:textColor="#ffb1b2b5"
                            android:layout_gravity="end" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/passphrase"
                            android:text="Enter Passphrase"
                            android:background="@drawable/healthpostbut"
                            android:layout_marginTop="7dp"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:paddingLeft="40dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/c2"
                            />

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/myevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/myevents_title_ic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@drawable/speakerbackground"
                            android:src="@drawable/myapps1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/backward"
                            android:fontFamily="@string/roboto_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="My Apps"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/myevents_title_ic"
                            app:layout_constraintLeft_toRightOf="@+id/myevents_title_ic"
                            app:layout_constraintTop_toTopOf="@+id/myevents_title_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW ALL"
                            android:textColor="@color/home_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/myevents_title_right_angle"
                            app:layout_constraintTop_toTopOf="parent" />

                        <cyd.awesome.material.AwesomeText
                            android:id="@+id/myevents_title_right_angle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/home_blue"
                            android:textSize="20sp"
                            app:awesome_font="font_awesome"
                            app:awesome_icon="FA_ANGLE_RIGHT"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/h1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/backward"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:background="@color/home_background"
                        android:fontFamily="@string/roboto_regular"
                        android:text="My Event"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading"
                        android:visibility="gone" />

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:focusableInTouchMode="true"
                        android:minHeight="150dp"
                        android:padding="10dp"
                        android:scrollbarSize="2dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/llayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:divider="@drawable/vertical_divider"
                            android:dividerPadding="5dp"
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            android:showDividers="middle"
                            android:weightSum="2" />


                    </HorizontalScrollView>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/myspace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:id="@+id/myspace_title_ic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/myapps1"
                            android:background="@drawable/speakerbackground"
                            android:textColor="@color/home_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/backward"
                            android:fontFamily="@string/roboto_regular"

                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="All Apps"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/myspace_title_ic"
                            app:layout_constraintLeft_toRightOf="@+id/myspace_title_ic"
                            app:layout_constraintTop_toTopOf="@+id/myspace_title_ic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW ALL"
                            android:textColor="@color/home_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/myspace_title_right_angle"
                            app:layout_constraintTop_toTopOf="parent" />

                        <cyd.awesome.material.AwesomeText
                            android:id="@+id/myspace_title_right_angle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/home_blue"
                            android:textSize="20sp"
                            app:awesome_font="font_awesome"
                            app:awesome_icon="FA_ANGLE_RIGHT"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/ms1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/backward"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:background="@color/home_background"
                        android:fontFamily="@string/roboto_regular"
                        android:text="My SPACE"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading"
                        android:visibility="gone" />

                    <HorizontalScrollView
                        android:id="@+id/mshorizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:focusableInTouchMode="true"
                        android:minHeight="150dp"
                        android:padding="10dp"
                        android:scrollbarSize="2dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/msllayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:divider="@drawable/vertical_divider"
                            android:dividerPadding="5dp"
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            android:showDividers="middle"
                            android:weightSum="2" />


                    </HorizontalScrollView>


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/recommevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp">

                        <ImageView
                            android:id="@+id/recevents_title_ic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/myapps1"
                            android:background="@drawable/speakerbackground"
                            android:textColor="@color/home_blue"
                            android:textSize="23sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/backward"
                            android:fontFamily="@string/roboto_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="All Apps"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/recevents_title_ic"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW ALL"
                            android:textColor="@color/home_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/recevents_title_right_angle"
                            app:layout_constraintTop_toTopOf="parent" />

                        <cyd.awesome.material.AwesomeText
                            android:id="@+id/recevents_title_right_angle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/home_blue"
                            android:textSize="20sp"
                            app:awesome_font="font_awesome"
                            app:awesome_icon="FA_ANGLE_RIGHT"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/backward"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:background="@color/home_background"
                        android:fontFamily="@string/roboto_regular"
                        android:text="Recommended Events"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:focusableInTouchMode="true"
                        android:minHeight="150dp"
                        android:padding="10dp"
                        android:scrollbarSize="2dp"
                        android:scrollbars="none">


                        <LinearLayout
                            android:id="@+id/llayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:divider="@drawable/vertical_divider"
                            android:dividerPadding="5dp"
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            android:showDividers="middle"
                            android:weightSum="2" />


                    </HorizontalScrollView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mypreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp">

                        <ImageView
                            android:id="@+id/mypreview_title_ic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/preview_ic"
                            android:textColor="@color/home_blue"
                            android:textSize="23sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/backward"
                            android:fontFamily="@string/roboto_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="MY PREVIEW"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/mypreview_title_ic"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW ALL"
                            android:textColor="@color/home_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/mypreview_title_right_angle"
                            app:layout_constraintTop_toTopOf="parent" />

                        <cyd.awesome.material.AwesomeText
                            android:id="@+id/mypreview_title_right_angle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/home_blue"
                            android:textSize="20sp"
                            app:awesome_font="font_awesome"
                            app:awesome_icon="FA_ANGLE_RIGHT"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <HorizontalScrollView
                        android:id="@+id/MyPriveiwHrScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:focusableInTouchMode="true"
                        android:minHeight="150dp"
                        android:padding="10dp"
                        android:scrollbarSize="2dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/llayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:divider="@drawable/vertical_divider"
                            android:dividerPadding="5dp"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:weightSum="2" />


                    </HorizontalScrollView>


                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/category_title_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/category_ic"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/backward"
                        android:fontFamily="@string/roboto_regular"
                        android:gravity="center_horizontal"
                        android:text="CATEGORIES"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
