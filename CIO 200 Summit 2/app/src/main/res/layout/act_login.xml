        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/mmm"
                android:background="#F814A7"
                >
                <cyd.awesome.material.AwesomeText
                    android:id="@+id/backward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:visibility="gone"
                    app:awesome_font="material_design"
                    app:awesome_icon="MD_ARROW_BACK" />

                <ImageView
                    android:layout_width="255dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/img"
                    android:layout_marginTop="23dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="46dp"
                    android:fontFamily="@string/roboto_regular"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Employee Engagement"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:background="@drawable/rect_backg_without_corner"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:hint="ENTER THE CODE"
                android:padding="10dp"
                android:layout_marginTop="50dp"
                android:layout_below="@id/mmm"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"
                android:textSize="16sp" />

            <cyd.awesome.material.AwesomeText
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/password"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:awesome_font="material_design"
                app:awesome_icon="MD_VISIBILITY_OFF" />


            <Button
                android:id="@+id/sigin_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/password"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#F814A7"
                android:gravity="center"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Please check your email for code"
                android:layout_below="@+id/sigin_in"
                android:textColor="@color/md_black_1000_transparent90"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                >
            </TextView>


