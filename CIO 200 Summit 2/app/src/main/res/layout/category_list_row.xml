<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/cat_list_ic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/trade_ic"
    android:padding="10dp"
    app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/cat_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cateogry Name"
        android:textSize="18sp"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/cat_list_ic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <cyd.awesome.material.AwesomeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/gray"
        android:textSize="30sp"
        app:awesome_font="font_awesome"
        app:awesome_icon="FA_ANGLE_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>