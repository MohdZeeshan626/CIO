<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:elevation="0dp">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/sColorPrimary"
                app:navigationIcon="@drawable/backwhite">


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <!-- Main layout for fragment placing -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/zm_gray_5"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/admin_panel"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/live1"
                        android:layout_width="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingLeft="12dp"
                        android:layout_gravity="start"
                        android:background="@drawable/zm_ui_kit_btn_round_white_gray_border"
                        android:paddingRight="10dp"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/live"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Live"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:padding="9dp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:fontFamily="@string/roboto_regular"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/upcoming1"
                    android:layout_width="wrap_content"
                    android:layout_margin="8dp"
                    android:paddingLeft="12dp"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="8dp"
                    android:background="@drawable/zm_ui_kit_btn_round_white_gray_border"


                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/upcoming"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Upcoming"
                        android:padding="9dp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:fontFamily="@string/roboto_regular"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/completed1"
                    android:layout_width="wrap_content"
                    android:layout_margin="8dp"
                    android:paddingLeft="12dp"
                    android:background="@drawable/zm_ui_kit_btn_round_white_gray_border"
                    android:paddingRight="5dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/completed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@string/roboto_regular"
                        android:gravity="center_horizontal"
                        android:padding="9dp"
                        android:text="Completed"
                        android:textColor="@color/black" />
                </LinearLayout>
                </LinearLayout>
             <ScrollView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/admin_panel"
                 android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/myevent"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:scrollbars="vertical"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:focusableInTouchMode="true"
                        android:minHeight="150dp"
                        android:padding="5dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/llayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:divider="@drawable/vertical_divider"
                            android:dividerPadding="5dp"
                            android:orientation="vertical"
                            android:paddingRight="10dp"
                            android:showDividers="middle"
                            android:weightSum="2"/>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW ALL"
                            android:textColor="@color/home_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/myevents_title_right_angle"
                            app:layout_constraintTop_toTopOf="parent" />

                        <cyd.awesome.material.AwesomeText
                            android:id="@+id/myevents_title_right_angle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/home_blue"
                            android:textSize="20sp"
                            app:awesome_font="font_awesome"
                            app:awesome_icon="FA_ANGLE_RIGHT"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
             </ScrollView>
                <FrameLayout
                    android:id="@+id/container2nd"
                    android:layout_below="@+id/admin_panel"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

            </RelativeLayout>

        </FrameLayout>
        </ScrollView>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
