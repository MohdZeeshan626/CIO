<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_go1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:background="@drawable/speakerbackground"
        android:layout_marginRight="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
           android:visibility="invisible"
            android:fontFamily="@string/roboto_regular"
            android:text="Book Meeting"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"

            android:text="Meeting Request Sent"
            android:textAppearance="@style/ConfirmationTextAppearance.SubTitle"
            app:layout_constraintLeft_toLeftOf="@+id/txt_title"
            app:layout_constraintRight_toRightOf="@+id/txt_title"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" />

        <ImageView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
           android:src="@drawable/meetingright"

            app:layout_constraintBottom_toBottomOf="@+id/txt_subtitle"
            app:layout_constraintRight_toLeftOf="@+id/txt_subtitle"
            app:layout_constraintTop_toTopOf="@+id/txt_subtitle" />


        <RelativeLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_subtitle"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/rmeetsent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/healthgrouplayout"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            app:layout_constraintBottom_toTopOf="@+id/meetview"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@string/roboto_regular"
            android:layout_marginLeft="14dp"
            android:textColor="@color/black"

            android:layout_below="@+id/meeting_title"
            android:textAppearance="@style/ConfirmationTextAppearance.Body"
            app:layout_constraintLeft_toLeftOf="@+id/meeting_title"
            app:layout_constraintTop_toBottomOf="@+id/meeting_title"
            tools:text="Date: 27 Sep" />
            <TextView
                android:id="@+id/txt_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="14dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/txt_conf_message"
                android:textAppearance="@style/ConfirmationTextAppearance.Body"
                android:textSize="12sp"
                android:layout_below="@+id/txt_time"
                android:visibility="visible"
                android:textStyle="italic"
               />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_date"
                android:textColor="@color/black"
                android:layout_marginLeft="14dp"
                android:fontFamily="@string/roboto_regular"
                android:textAppearance="@style/ConfirmationTextAppearance.Body"
                tools:text="Time: 1-2 PM" />


            <TextView
                android:id="@+id/meeting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_name"
                android:layout_marginLeft="14dp"

                android:layout_marginTop="@dimen/spacing_medium"
                android:fontFamily="@string/roboto_regular"
                android:textAppearance="@style/ConfirmationTextAppearance.Body"
                android:textColor="@color/black"
                tools:text="Title: Lunch" />

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_marginEnd="@dimen/spacing_big"
            android:layout_marginLeft="0dp"
            android:visibility="gone"
            android:layout_marginRight="24dp"
            android:layout_marginTop="63dp"
            android:src="@drawable/meetingbgimg1"

            tools:ignore="ContentDescription" />



        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@string/roboto_regular"
            android:textAppearance="@style/ConfirmationTextAppearance.Body"
            tools:text="Name: Testing" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/meetview"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/meetingbgimg1"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@+id/rmeetsent" />

        <cyd.awesome.material.AwesomeText
            android:id="@+id/btn_arrow"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:awesome_font="pixeden_stroke"
            app:awesome_icon="PE_CLOSE"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

