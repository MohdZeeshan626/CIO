<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <cyd.awesome.material.AwesomeText
                android:id="@+id/backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="45sp"
                app:awesome_font="pixeden_stroke"
                app:awesome_icon="PE_CLOSE" />

            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backward"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:text="Welcome Back"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:customFont="@string/roboto_regular" />


            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Email Address / UserID"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="@string/roboto_regular" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/act_edittextback"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginTop="15dp">

                <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/show"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:customFont="@string/roboto_regular" />


                <cyd.awesome.material.AwesomeText
                    android:id="@+id/show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="15dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    app:awesome_font="material_design"
                    app:awesome_icon="MD_VISIBILITY_OFF" />


            </RelativeLayout>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/act_edittextback"
                android:inputType="textPassword"
                android:textColor="@color/black" />


            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/forgotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Forgot Password ?"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:customFont="@string/roboto_regular" />


            <Button
                android:id="@+id/signin"
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgotpassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/act_button_border"
                android:padding="12dp"
                android:text="SIGN IN"
                android:textColor="@color/white" />

            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signin"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                app:customFont="@string/roboto_regular" />


        </RelativeLayout>

    </ScrollView>

</LinearLayout>