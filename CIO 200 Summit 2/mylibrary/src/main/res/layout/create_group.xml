                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Hide Group"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal"></TextView>

            <TextView
                android:id="@+id/rhtext1"
