<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">


    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="12dp"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTodaysActivity"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Today's Activity"
                android:fontFamily="@font/roboto_medium"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@id/txtTodaysActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="15dp"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/steps"/>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="24sp"
                    android:textColor="#ea6749"
                    android:text="3,479"
                    android:id="@+id/txt_Steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="Steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="15dp"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_miles"/>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="24sp"
                        android:textColor="#509cfa"
                        android:text="3,479"
                        android:id="@+id/txt_Miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="Miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="15dp"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_timer_black_24dp"/>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="24sp"
                        android:textColor="#f4c475"
                        android:text="3,479"
                        android:id="@+id/txt_Mins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="Active Minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>