                        <Button
                            android:id="@+id/btn_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            android:background="@drawable/roundbtn"
                            android:padding="@dimen/zm_ui_kit_text_size_15sp"
                            android:layout_margin="15dp"
                            android:text="View Activity Insights"/>

                        <LinearLayout
                            android:id="@+id/linearChallenge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:paddingTop="35dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:fontFamily="@font/roboto_slab_bold"
                                android:text="Challenges"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="22sp"/>
                            <Button
                                android:id="@+id/joinbtn_create"
                                android:layout_width="170dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/healthbutton"
                                android:fontFamily="@font/roboto_medium"
                                android:textAllCaps="false"
                                android:text="+ Join/Creates"
                                android:textColor="@color/white"/>



                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </RelativeLayout>


