<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ff7d7d7d"
        android:id="@+id/header"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/zm_btn_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/youra"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/backpress"
            android:textColor="#ffffffff"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="Create Challenge"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:background="@drawable/healthcancel"
            android:text=" cancel "
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff4f6fa">

        <RelativeLayout
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/public_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_privacy"
                android:layout_gravity="start"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="25dp"
                android:background="@color/light_gray"
                android:orientation="horizontal"
                android:padding="4dp">


                <RelativeLayout
                    android:id="@+id/gpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/gp_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/imgpublic"
                        android:padding="5dp"
                        android:text="Steps"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="normal"></TextView>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgpublic"
                        android:layout_width="@dimen/zm_height_36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="1dp"
                        android:padding="5dp"
                        android:src="@drawable/stepsgray">

                    </de.hdodenhof.circleimageview.CircleImageView>


                    <!-- <RadioButton
                     android:id="@+id/radio_pirates"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     android:layout_alignParentTop="true"
                     android:layout_marginEnd="18dp"

                     android:layout_marginTop="15dp"
                     android:buttonTint="@color/black"
                     android:onClick="onRadioButtonClickedPublic"
                     android:padding="5dp" />-->


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/private_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_privacy"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/public_privacy"
                android:background="@color/light_gray"
                android:gravity="right"
                android:orientation="horizontal"

                android:padding="4dp">


                <RelativeLayout
                    android:id="@+id/rc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="3dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/gp_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/imgpublic1"
                        android:padding="5dp"
                        android:text="Tiime"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="normal"></TextView>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgpublic1"
                        android:layout_width="@dimen/zm_height_36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="1dp"
                        android:padding="5dp"
                        android:src="@drawable/timergray">

                    </de.hdodenhof.circleimageview.CircleImageView>


                    <!-- <RadioButton
                     android:id="@+id/radio_pirates"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     android:layout_alignParentTop="true"
                     android:layout_marginEnd="18dp"

                     android:layout_marginTop="15dp"
                     android:buttonTint="@color/black"
                     android:onClick="onRadioButtonClickedPublic"
                     android:padding="5dp" />-->


                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/group_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:padding="5dp"
                android:text="How are you competing ?"
                android:textColor="#203142"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/privacytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Your challenge will be scored high to low based on total steps moved"
                android:textColor="@color/zm_picker_dark_line"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/privacytext"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/healthbutton"
                android:padding="10dp"
                android:text="Next"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"></TextView>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/private_privacy"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:background="@color/grey_800"></View>

            .

        </RelativeLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerInParent="true"
            android:layout_weight="@dimen/zm_btn_height_24dp"
            android:text="Step 2/4" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_weight="@dimen/zm_btn_height_24dp"
            android:fontFamily="@string/rubic_regular"
            android:text="Select Your Challenge Goal"
            android:textColor="#070707"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
