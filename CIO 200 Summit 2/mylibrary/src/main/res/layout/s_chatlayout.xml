<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:foo="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        foo:navigationIcon="@drawable/backwhite">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mychat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                foo:layout_constraintLeft_toLeftOf="parent"
                foo:layout_constraintTop_toTopOf="@+id/showattendees"
                foo:layout_constraintBottom_toBottomOf="@+id/showattendees"
                android:layout_marginRight="10dp"
                android:text="My Chat"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/showattendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="15dp"
                foo:layout_constraintRight_toRightOf="parent"
                android:onClick="showAttendeesList"
                android:src="@drawable/showattendees"
                android:tint="@color/white"
                android:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/attendee_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_above="@+id/atendee_ad_card_view"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectanglebackground"
                android:visibility="gone">

                <EditText
                    android:id="@+id/attendee_search_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:fontFamily="@string/roboto_regular"
                    android:hint="Search"
                    android:padding="5dp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <!-- <ListView
                 android:id="@+id/userlist"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/white"
                 android:divider="@color/light_gray"
                 android:dividerHeight="0dp" />-->
            <com.tubb.smrv.SwipeMenuListView
                android:id="@+id/userlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>



        </LinearLayout>


        <include
            android:id="@+id/vtryagain"
            layout="@layout/s_tryagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/atendee_ad_card_view"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="42dp"
        android:visibility="gone">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/attendee_adsImage_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/noitems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:fontFamily="@string/roboto_regular"
        android:text="No attendees available"
        android:textSize="16sp"
        android:visibility="gone" />
</RelativeLayout>