<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/groupl"
    android:layout_marginBottom="10dp"
    android:id="@+id/m0">
   <RelativeLayout
       android:layout_width="match_parent"
       android:id="@+id/m1"
       android:layout_height="wrap_content">
    <TextView

        android:fontFamily="@string/rubic_regular"
        android:textColor="#203241"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/cname"
        android:textSize="20sp"
        android:text="Office Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

       <TextView

           android:id="@+id/cstepspoint"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/cname"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="8dp"
           android:fontFamily="@font/roboto_slab_bold"
           android:text="160 Joined - 1000 steps"
           android:textColor="@color/gray"
           android:textSize="16sp" />


   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/main"
        android:layout_below="@id/m1">
        <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/m2"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_margin="10dp"
            android:gravity="start"
             android:fontFamily="@font/roboto_medium"
            android:text="Person"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinmode"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/black"
            android:gravity="end"></Spinner>


    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/m2"
            android:id="@+id/vi"
            android:background="@color/light_gray"
            android:layout_marginTop="2dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vi"
        android:id="@+id/m3"
        android:background="#ff8c80f8"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/leaderboard_image"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp"
            android:src="@drawable/deficon"/>

        <TextView
            android:id="@+id/leaderboard_txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="Grace"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/leaderboard_pos"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/medfirst" />

        <TextView

            android:id="@+id/leaderboard_txtkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m3"
        android:id="@+id/m4"
        android:layout_marginTop="15dp"
        android:background="#ff8c80f8"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/leaderboard_image1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp"
            android:src="@drawable/deficon"/>


        <TextView
            android:id="@+id/leaderboard_txtname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="Grace"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/leaderboard_pos1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/medsecond" />

        <TextView

            android:id="@+id/leaderboard_txtkm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

        <Button
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m4"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="   View States  "
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>




</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/m0"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
