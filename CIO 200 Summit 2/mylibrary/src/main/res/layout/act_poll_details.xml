<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:foo="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        foo:navigationIcon="@drawable/backwhite" />


    <TextView
        android:id="@+id/tv_poll_head"
        android:text="How Familiar are you with this tool ?"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@string/roboto_regular"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rightsign"
            android:src="@drawable/ic_check_circle_green"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_ansheading"
            android:layout_toRightOf="@+id/rightsign"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@string/roboto_regular"
            android:text="@string/polling_details"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_anspoll"
            android:layout_below="@+id/tv_ansheading"
            android:layout_toRightOf="@+id/rightsign"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@string/roboto_regular"

            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:id="@+id/btn_see_results"

        android:textSize="16sp"
        android:layout_marginTop="5dp"

        android:text="Poll Results"
        android:minHeight="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/light_gray"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:fontFamily="@string/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_totalNoOfAns"
                android:padding="16sp"
                android:text="Total numbers of answers: 120"
                android:fontFamily="@string/roboto_regular"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>
