<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/txtSender"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:text=""
            android:fontFamily="@string/roboto_regular"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/prof_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:src="@drawable/alpha_j"/>

        <TextView
            android:id="@+id/txtDate"
            android:fontFamily="@string/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/txtbody"
            android:layout_alignRight="@id/txtbody"
            android:layout_below="@id/txtbody"
            android:paddingBottom="6dp"
            android:paddingRight="6dp"
            android:text="9:41 AM"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/txtbody"
            android:layout_toLeftOf="@+id/prof_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_chat_right"
            android:layout_margin="5dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:fontFamily="@string/roboto_regular"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>