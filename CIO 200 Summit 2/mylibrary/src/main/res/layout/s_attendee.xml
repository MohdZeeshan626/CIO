<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff4f6fa"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        foo:navigationIcon="@drawable/backwhite" />

    <FrameLayout
        android:layout_below="@id/toolbar"
        android:id="@+id/attendee_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="#fff4f6fa"
        android:layout_above="@+id/atendee_ad_card_view"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff4f6fa"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_checkInternet"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:fontFamily="@string/roboto_regular"
                android:textSize="12sp"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:text="@string/can_t_connect_to_network_please_check_your_internet_connection"
                android:background="@color/m_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/speakerbackground"
                >

                <EditText
                    android:id="@+id/attendee_search_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/speakerbackground"
                    android:drawableLeft="@drawable/ic_baseline_search_24"
                    android:hint="Search"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swiperefresh"
                android:layout_width="match_parent"
                android:background="#fff4f6fa"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/userlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff4f6fa"
                    android:divider="@color/light_gray"
                    android:dividerHeight="0dp" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



            <TextView
                android:id="@+id/noitems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@string/roboto_regular"
                android:gravity="center"
                android:text="No attendees available"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>


        <include
            android:id="@+id/vtryagain"
            layout="@layout/s_tryagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/atendee_ad_card_view"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="42dp"
        android:visibility="gone">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/attendee_adsImage_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>