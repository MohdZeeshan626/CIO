<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff4f6fa"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
       >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profilepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:src="@drawable/challengeimg"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/counter"
            android:layout_toRightOf="@+id/profilepic"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/time"
                    android:fontFamily="@string/rubic_regular"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#202142"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@string/roboto_regular"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


            </RelativeLayout>



            <TextView
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"

                android:fontFamily="@string/roboto_regular"
                android:singleLine="true"
                android:text="webmobi"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/rubic_regular"
                android:singleLine="true"
                android:text="android"
                android:textColor="#ff9c9eb9"
                android:textSize="11sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/ucity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"

                android:fontFamily="@string/roboto_regular"
                android:singleLine="true"
                android:text="indore"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>


        <Button
            android:id="@+id/invite"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/healthpostbut"
            android:gravity="center"
            android:text="Invite"
            android:textAllCaps="false"
            android:textSize="11sp"
            android:textColor="@color/white"/>

<!--
        <LinearLayoutSi
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/l1"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/invite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/lead_gen_btn_bckg"
                android:text="Invite"
                android:textColor="@color/white"

                />


        </LinearLayout>
-->



        <TextView
            android:id="@+id/counter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/badge"
            android:fontFamily="@string/roboto_regular"
            android:gravity="center"
            android:text=" "
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>


    <View
        android:background="#fff4f6fa"
        android:layout_below="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"

        android:layout_height="3dp"/>


</RelativeLayout>