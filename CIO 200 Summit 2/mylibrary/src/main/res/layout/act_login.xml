<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <cyd.awesome.material.AwesomeText
                android:id="@+id/backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:awesome_font="material_design"
                app:awesome_icon="MD_ARROW_BACK" />

            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/backward"
                android:layout_marginTop="40dp"
                android:text="Log In"
                android:id="@+id/h1"
                android:textColor="@color/black"
                android:textSize="36sp"
                app:customFont="@string/proximanovalight" />


            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Email Address"
                android:layout_below="@+id/h1"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="@string/proximanova" />


            <EditText
                android:id="@+id/email"
                android:layout_below="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:layout_marginTop="15dp"
                android:background="@drawable/act_edittextback"
                android:inputType="textEmailAddress"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/h3"
                android:layout_below="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/show"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    app:customFont="@string/proximanova" />


                <cyd.awesome.material.AwesomeText
                    android:id="@+id/show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_centerVertical="true"
                    app:awesome_font="material_design"
                    app:awesome_icon="MD_VISIBILITY_OFF" />


            </RelativeLayout>

            <EditText
                android:layout_below="@+id/h3"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/act_edittextback"
                android:inputType="textPassword"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please check your email for passkey"
                android:textColor="#60289d"
                android:backgroundTint="@color/blue_grey_400"
                android:layout_below="@id/password"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                >
            </TextView>


            <TextView
                android:layout_below="@+id/password"
                android:layout_width="wrap_content"
                android:id="@+id/forgotpassword"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Forgot Password ?"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@string/roboto_regular"
                android:layout_height="wrap_content" />

            <ImageView
                android:padding="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/next_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sigin_in" />


        </RelativeLayout>

    </ScrollView>

</LinearLayout>