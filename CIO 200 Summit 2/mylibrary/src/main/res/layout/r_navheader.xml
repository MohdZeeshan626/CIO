<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/rightbck"
            android:padding="8dp"
           android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/backwhite"
            />
    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/r11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/uprofile"
            android:scaleType="fitXY"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/default_user"/>


        <TextView
            android:id="@+id/tvRHeader"
            android:textSize="18sp"
            android:fontFamily="@string/roboto_regular"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:layout_below="@+id/uprofile"
            android:paddingRight="30dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:text="hi narendra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/md_grey_500_disabled"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/r11"
        android:background="#FFFFFF"
        />
    </RelativeLayout>




</LinearLayout>