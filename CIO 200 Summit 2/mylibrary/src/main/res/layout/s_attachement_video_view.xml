<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"
    xmlns:foo="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
       android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cyd.awesome.material.AwesomeText
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="25sp"
            foo:awesome_font="font_awesome"
            foo:awesome_icon="FA_FILE_PDF_O" />
        <ImageView
            android:id="@+id/iv_thmb"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_toRightOf="@+id/iv_thmb"
            android:layout_toLeftOf="@+id/iv_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">

            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/medianame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twitter"
                android:maxLines="3"
                android:layout_marginLeft="16dp"
                android:fontFamily="@string/roboto_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/mediaurl"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://www.facebook.com/dipmf.ae"
                android:textColor="#8F9FA9"
                android:textSize="14sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/linearlayout"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>