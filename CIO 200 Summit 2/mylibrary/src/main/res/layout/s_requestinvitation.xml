<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="myrequest"
            type="com.singleevent.sdk.model.My_Request" />

        <variable
            name="presenter"
            type="com.singleevent.sdk.feeds_class.Scheduler" />

        <variable
            name="isRequest"
            type="boolean" />
        <variable name="background"
            type="int"/>

    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardspeaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="60dp"
                    card_view:relativeLayout2="@{background}"
                    android:layout_height="match_parent"
                    android:background="#478AFA">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/date"
                            android:layout_centerHorizontal="true"
                            android:text="Oct"
                            android:fontFamily="@string/roboto_regular"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            card_view:month="@{myrequest.meeting_date}" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/month"
                            android:layout_alignParentBottom="true"
                            android:layout_alignStart="@+id/month"
                            android:text="21"
                            android:fontFamily="@string/roboto_regular"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            card_view:date="@{myrequest.meeting_date}" />

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:fontFamily="@string/roboto_regular"
                        android:text="@{myrequest.username}"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/slot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="09:00 AM - 09:30 AM"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@string/roboto_regular"
                        card_view:fromtime="@{myrequest.from_time}"
                        card_view:totime="@{myrequest.to_time}" />

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:fontFamily="@string/roboto_regular"
                        android:text="@{myrequest.title}"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:fontFamily="@string/roboto_regular"
                        android:text="@{myrequest.description}"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="@{isRequest ? View.VISIBLE : View.GONE}"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decline"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/roboto_regular"
                    android:background="@color/gray"
                    android:onClick="@{() -> presenter.decline(myrequest)}"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="Decline"

                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/accept"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    card_view:accept="@{background}"
                    android:onClick="@{() -> presenter.accept(myrequest)}"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:fontFamily="@string/roboto_regular"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>