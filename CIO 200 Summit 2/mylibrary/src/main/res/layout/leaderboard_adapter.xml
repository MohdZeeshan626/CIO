<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:background="@drawable/speakerbackground"

    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_1st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/tv_count"
                android:text="22"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@color/black"
                android:fontFamily="@string/roboto_regular"
                android:background="@drawable/rect_backg_without_corner"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_toRightOf="@+id/tv_count"
                android:id="@+id/iv_profile_pic"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/default_user"
                android:layout_width="62dp"
                android:layout_height="65dp" />
            <RelativeLayout
                android:layout_marginLeft="33dp"
                android:id="@+id/rl_right_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/iv_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="16sp"
                    android:text="Sachin Anand"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@string/roboto_regular"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/scoreimg"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreimg"
                    android:visibility="gone"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@id/tv_leads"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/gold"
                    />

                <TextView
                    android:layout_below="@+id/tv_name"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_email"
                    android:text=""
                   android:layout_alignParentLeft="true"
                    android:visibility="gone"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:layout_toLeftOf="@+id/tv_leads"
                    android:fontFamily="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/tv_leads"
                    android:textSize="14sp"
                    android:text="50"
                    android:minHeight="25dp"
                    android:minWidth="55dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@string/roboto_regular"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>

    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="0.5dp"/>


</RelativeLayout>