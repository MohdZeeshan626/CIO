<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/newuibg"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/speakerbackground"
        android:layout_width="match_parent"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:background="@drawable/speakerbackground"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/logo"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/medianame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:textColor="@color/black"
            android:fontFamily="@string/rubic_regular"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/iv"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginLeft="10dp"
             />
        <TextView
            android:id="@+id/mediaurl"
            android:layout_below="@+id/medianame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/iv"
            android:textColor="@color/newui2nd"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"

            android:marqueeRepeatLimit="marquee_forever"

            android:fontFamily="@string/roboto_regular" />
        <ImageView
            android:id="@+id/iv"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    </RelativeLayout>



</LinearLayout>

