<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:id="@+id/parentlayout_join_create"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="20dp"
        android:paddingBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="360dp"

        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:gravity="end"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Jogging through June - 15+ steps/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_create_txt_challenge_name"/>

            <TextView
                android:id="@+id/join_create_txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
               android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Jun 1 - Jun 30"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:text="433 Participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_create_txtParticipants"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/joinbtn_create_challenge"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="55dp"
                android:textAllCaps="false"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/healthbutton"
                android:fontFamily="@font/roboto_medium"
                android:text="+ join "
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>