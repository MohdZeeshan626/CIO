<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F4F6FA"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        app:navigationIcon="@drawable/backwhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@string/roboto_regular"
                android:text="My Notes"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/my_notes_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@string/roboto_regular"
                android:text="EXPORT"
                app:layout_constraintTop_toTopOf="@+id/title_name"
                app:layout_constraintBottom_toBottomOf="@+id/title_name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:scrollbars="vertical"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/nonotes"
        android:visibility="gone"
        android:layout_below="@id/recycler_view"
        android:layout_centerInParent="true"
       android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:src="@drawable/mynotes1"
            android:id="@+id/mysimg"
            />
        <TextView
            android:id="@+id/no1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mysimg"
            android:fontFamily="@string/rubic_regular"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="No Notes Created!"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/no2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no1"
            android:fontFamily="@string/rubic_regular"
            android:layout_marginTop="7dp"
            android:layout_centerInParent="true"
            android:textColor="#B1B1B1"
            android:gravity="center"
            android:text="Tap below to create your first note"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_no_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mysimg"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@string/roboto_regular"
            android:gravity="center"
            android:visibility="gone"
            android:text="No Notes"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <Button
            android:id="@+id/mynotebut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:layout_marginTop="60dp"
            android:paddingLeft="40dp"
            android:layout_below="@+id/no2"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:background="@drawable/healthpostbut"
            android:textAllCaps="false"
            android:text="Create Notes"
            android:textSize="15sp"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>