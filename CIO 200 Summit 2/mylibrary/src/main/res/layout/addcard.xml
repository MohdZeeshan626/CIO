<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/s_all_side_radius"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:fillViewport="true"
        app:behavior_overlapTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/creategroupform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/sColorPrimary">

                <cyd.awesome.material.AwesomeText
                    android:id="@+id/gclose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    app:awesome_font="pixeden_stroke"
                    app:awesome_icon="PE_CLOSE" />

                <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                    android:id="@+id/h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Add Card"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:customFont="@string/roboto_regular_light" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/creategroupform">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Board"
                    android:textColor="@color/black"
                    android:id="@+id/b1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />
                 <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                     android:layout_below="@+id/b1"
                     android:backgroundTint="@color/black"

                    android:layout_marginLeft="2dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/board">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List"
                    android:id="@+id/l1"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />
                 <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                     android:layout_below="@+id/l1"
                     android:backgroundTint="@color/black"
                    android:layout_marginLeft="2dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/list"
                android:background="@color/sColorPrimary">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/white">

                    <EditText
                        android:id="@+id/cardname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"

                        android:layout_alignParentTop="true"
                        android:hint="Card Name"
                        android:padding="20dp"></EditText>
                    <EditText
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardname"
                        android:hint="Desciption"
                        android:padding="20dp"></EditText>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/selectgroup"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:onClick="calendarClicks"
                        android:layout_below="@id/desc"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/ic_person"
                            />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/addicon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_toRightOf="@+id/user"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/rounded_bg_green"
                            android:src="@drawable/ic_add_white_24dp"
                            />


                    </RelativeLayout>


                    <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/calview"
                       android:layout_marginBottom="10dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp"
                       android:onClick="calendarClicks"
                       android:layout_below="@id/selectgroup"
                       >

                    <ImageView
                        android:id="@+id/calc"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_date_range_black_24dp"
                        />

                    <TextView
                        android:id="@+id/pickdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/calc"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:text="Due Date" />
                   </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>