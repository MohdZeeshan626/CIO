<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <cyd.awesome.material.AwesomeText
                android:id="@+id/backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:awesome_font="material_design"
                app:awesome_icon="MD_ARROW_BACK" />


            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backward"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:text="Old Password"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="@string/roboto_regular" />


            <EditText
                android:id="@+id/old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@string/roboto_regular"
                android:background="@drawable/act_edittextback"
                android:backgroundTint="@color/black"
                android:inputType="textPassword"
                android:textColor="@color/black" />


            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/old_pwd"
                android:layout_marginLeft="15dp"
                android:fontFamily="@string/roboto_regular"
                android:layout_marginTop="?attr/actionBarSize"
                android:text="New Password"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="@string/roboto_regular" />


            <EditText
                android:id="@+id/new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@string/roboto_regular"
                android:background="@drawable/act_edittextback"
                android:backgroundTint="@color/black"
                android:inputType="textPassword"
                android:textColor="@color/black" />

            <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                android:id="@+id/h4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_pwd"
                android:layout_marginLeft="15dp"
                android:fontFamily="@string/roboto_regular"
                android:layout_marginTop="?attr/actionBarSize"
                android:text="Confirm Password"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:customFont="@string/roboto_regular" />


            <EditText
                android:id="@+id/con_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/h4"
                android:fontFamily="@string/roboto_regular"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/act_edittextback"
                android:backgroundTint="@color/black"
                android:inputType="textPassword"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/con_pwd"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/sColorPrimary"
                android:gravity="center"
                android:text="SAVE"
                android:fontFamily="@string/roboto_regular"
                android:textColor="#ffffff"
                android:textSize="16sp"
             />


        </RelativeLayout>

    </ScrollView>


</LinearLayout>