<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="#fff4f6fa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar11"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        app:navigationIcon="@drawable/backwhite">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="My Contacts"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar11"
        android:background="#fff4f6fa"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rimg"
                    android:padding="25dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/speakerbackground"
                    android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/imageview_business_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bsscard" />

                <TextView
                    android:id="@+id/tvheading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageview_business_card"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Webmobi can digitize business cards you received and automatically create contacts for you! Just take  photo with our business card scanner."
                    android:textColor="#ffb1b2b5"
                    android:textSize="14sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/camera_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rimg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/healthpostbut"
                    android:drawableLeft="@drawable/cameraicon"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:paddingTop="12dp"
                    android:text="Scan Business Card"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/ble_scan_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/camera_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/healthpostbut"
                    android:drawableLeft="@drawable/qqqqqqq"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:paddingTop="12dp"
                    android:text="Scan QR Code"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/attachment2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/attachment2"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/ll_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_fname_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:text="First Name"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/et_fname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/act_aboutborder"
                            android:hint="First name"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <View
                            android:id="@+id/v2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_fname"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_lname_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:text="Last Name"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <View

                            android:id="@+id/v33"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray"
                            android:visibility="gone" />


                        <EditText
                            android:id="@+id/et_lname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/act_aboutborder"
                            android:hint="Last name"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/o1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_lname"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <RelativeLayout
                            android:id="@+id/form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eeeeee"
                                android:fontFamily="@string/roboto_regular_bold"
                                android:gravity="center_horizontal"
                                android:padding="4dp"
                                android:text="Contact Details"
                                android:textColor="@color/black"
                                android:textSize="23sp" />
                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/o2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/o1"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_companyTitle"
                                android:layout_width="100dp"
                                android:layout_height="36dp"
                                android:fontFamily="@string/roboto_regular"
                                android:text="Company"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/tv_company"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_companyTitle"
                                android:background="@drawable/act_aboutborder"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@string/roboto_regular"
                                android:paddingLeft="1dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_designationTitle"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:fontFamily="@string/roboto_regular"
                                android:text="Designation"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/tv_designation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_designationTitle"
                                android:background="@drawable/act_aboutborder"
                                android:fontFamily="@string/roboto_regular"
                                android:paddingLeft="1dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_addressTitle"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/roboto_regular"
                                android:text="Address"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/tv_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_addressTitle"
                                android:background="@drawable/act_aboutborder"
                                android:fontFamily="@string/roboto_regular"
                                android:maxLines="4"
                                android:paddingLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_phoneNoTitle"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/roboto_regular"
                                android:text="Phone no"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/tv_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_phoneNoTitle"
                                android:background="@drawable/act_aboutborder"
                                android:fontFamily="@string/roboto_regular"
                                android:paddingLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_emailTitle"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/roboto_regular"
                                android:text="Email"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/tv_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_emailTitle"
                                android:background="@drawable/act_roundedborder"
                                android:fontFamily="@string/roboto_regular"
                                android:paddingLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_websiteTitle"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/roboto_regular"
                                android:text="Website"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/tv_website"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_websiteTitle"
                                android:background="@drawable/act_aboutborder"
                                android:fontFamily="@string/roboto_regular"
                                android:paddingLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_faxTitle"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/roboto_regular"
                                android:text="Fax"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/tv_fax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_faxTitle"
                                android:background="@drawable/act_aboutborder"
                                android:fontFamily="@string/roboto_regular"
                                android:paddingLeft="4dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#eeeeee"
                            android:fontFamily="@string/roboto_regular_bold"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:text="Alternate Contact Details"
                            android:textColor="@color/black"
                            android:textSize="23sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/alt"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/tv_altPhoneTitle"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/roboto_regular"
                                    android:text="Phone no"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_alt_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/tv_altPhoneTitle"
                                    android:background="@drawable/act_aboutborder"
                                    android:fontFamily="@string/roboto_regular"
                                    android:paddingLeft="4dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/tv_altEmailTitle"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/roboto_regular"
                                    android:text="Email"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_altEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/tv_altEmailTitle"
                                    android:background="@drawable/act_aboutborder"
                                    android:fontFamily="@string/roboto_regular"
                                    android:paddingLeft="4dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/tv_altWebsiteTitle"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/roboto_regular"
                                    android:text="Website"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/tv_altWebsite"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/tv_altWebsiteTitle"
                                    android:background="@drawable/act_aboutborder"
                                    android:fontFamily="@string/roboto_regular"
                                    android:paddingLeft="4dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_1st"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/alt"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#eeeeee"
                                android:fontFamily="@string/roboto_regular_bold"
                                android:gravity="center_horizontal"
                                android:padding="4dp"
                                android:text=" Add Description"
                                android:textColor="@color/black"
                                android:textSize="23sp" />

                            <View

                                android:id="@+id/v11"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/gray"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/et_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/act_aboutborder"
                                android:hint="Optional"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/relativelayout_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button_send"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="20dp"
                                android:backgroundTint="@color/theme"
                                android:text="Send"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/button_retake"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="20dp"
                                android:backgroundTint="@color/theme"
                                android:text="Rescan"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee">

                <Button
                    android:id="@+id/camera_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/healthpostbut"
                    android:drawableLeft="@drawable/cameraicon"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:paddingTop="12dp"
                    android:text="Scan Business Card"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/ble_scan_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/camera_button2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/healthpostbut"

                    android:drawableLeft="@drawable/qqqqqqq"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:paddingTop="12dp"
                    android:text="Scan QR Code"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_button2"
                android:orientation="vertical">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/textViewToolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="gone">

            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <include layout="@layout/activity_contact_profile" />
        </RelativeLayout>


    </FrameLayout>




</LinearLayout>
