<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:foo="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        foo:titleTextColor="@color/white" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cyd.awesome.material.AwesomeText
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:awesome_font="pixeden_stroke"
                app:awesome_icon="PE_CLOSE" />

            <TextView
                android:text="Attendee"
                android:layout_alignParentLeft="true"
                android:textSize="22sp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:fontFamily="@string/roboto_regular"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/attendee_fl"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/userview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/userlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:divider="@color/light_gray"
                android:dividerHeight="0dp" />

            <TextView
                android:id="@+id/noitems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@string/roboto_regular"
                android:text="No attendees available"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>


        <include
            android:id="@+id/vtryagain"
            layout="@layout/s_tryagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


    </FrameLayout>
</LinearLayout>