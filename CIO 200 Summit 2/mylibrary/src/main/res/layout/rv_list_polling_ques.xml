<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_answerdpoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answered Polls"
        android:textColor="@color/dark_gray"
        android:background="@color/light_gray"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:visibility="visible"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@string/roboto_regular" />




    <RelativeLayout
        android:background="@drawable/bottom_border"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/tv_answerdpoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question slll ?"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="5dp"
           android:fontFamily="@string/roboto_regular" />
        <RelativeLayout
            android:layout_below="@+id/questions"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ans"
                android:minHeight="15dp"

                android:text="Answer Poll"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:visibility="visible"
                android:foreground="?attr/selectableItemBackground"
                android:fontFamily="@string/roboto_regular"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@color/sColorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_alreadyAnsrd"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rightsign"
                    android:src="@drawable/ic_check_circle_green"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/tv_anspoll"
                    android:layout_toRightOf="@+id/rightsign"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@string/roboto_regular"
                    android:text="You answered this poll"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/btn_see_results"
                    android:layout_below="@+id/tv_anspoll"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:text="See Results"
                    android:minHeight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"

                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:fontFamily="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>