<?xml version="1.0" encoding="utf-8"?>
<RelativeLayot xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/webmobilogo"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/logo">

                <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                    android:id="@+id/eventtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginLeft="12dp"
                    android:text="CURRENT SPACE"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:customFont="@string/roboto_regular_light" />


                <TextView
                    android:id="@+id/eventlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventtitle"
                    android:layout_toRightOf="@+id/marker"
                    android:fontFamily="@string/roboto_regular_light"
                    android:singleLine="true"
                    android:layout_marginLeft="12dp"
                    android:text="webMOBI"
                    android:textStyle="bold"
                    android:textColor="@color/grey_800"
                    android:textIsSelectable="true"
                    android:textSize="22sp"/>

            </RelativeLayout>


        </RelativeLayout>


</RelativeLayot>