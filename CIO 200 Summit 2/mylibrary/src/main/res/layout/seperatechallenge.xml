<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f9"
    tools:context=".health.Activity.SeperateChallenge">

    <TextView
        android:id="@+id/txt_active"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_challenge"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearActiveChallenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/homescreen_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/m_deep_orange"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/backpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:background="@color/m_deep_orange"
                        android:src="@drawable/zm_btn_back_white" />

                    <TextView
                        android:id="@+id/txtChallenge_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/backpress"
                        android:layout_marginTop="@dimen/zm_dialog_margin_12dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="22dp" />

                    <Button
                        android:id="@+id/btn_material_active"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_more_horiz" />



                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/m_deep_orange"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic_group_black_24dp" />

                    <TextView
                        android:id="@+id/txtChallenge_participants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:fontFamily="@font/roboto_slab_bold"

                        android:paddingLeft="10dp"
                        android:text="0 Participants"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ic_date_range_black_24dp" />

                    <TextView
                        android:id="@+id/txtChallenge_dates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:paddingLeft="12dp"
                        android:text=""
                        android:textColor="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:focusableInTouchMode="true"
                        android:minHeight="150dp"
                        android:padding="5dp"
                        android:scrollbarSize="2dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/llayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:divider="@drawable/vertical_divider"
                            android:dividerPadding="5dp"
                            android:orientation="horizontal"
                            android:paddingRight="10dp"
                            android:showDividers="middle"
                            android:weightSum="2" />


                    </HorizontalScrollView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW ALL"
                            android:textColor="@color/home_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/myevents_title_right_angle"
                            app:layout_constraintTop_toTopOf="parent" />

                        <cyd.awesome.material.AwesomeText
                            android:id="@+id/myevents_title_right_angle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/home_blue"
                            android:textSize="20sp"
                            app:awesome_font="font_awesome"
                            app:awesome_icon="FA_ANGLE_RIGHT"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/totalpoints"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="@dimen/zm_ui_kit_text_size_15sp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_linear"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/totalstep"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        android:layout_below="@+id/totaltext"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/steps" />

                    <ImageView
                        android:id="@+id/totaldist"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_below="@+id/totalstep"
                        android:visibility="gone"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_miles" />

                    <ImageView

                        android:id="@+id/totaltime"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        android:layout_below="@+id/totaldist"
                        android:layout_marginLeft="8dp"


                        android:layout_marginStart="150dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_timer_black_24dp" />

                    <TextView
                        android:id="@+id/totaltext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="Challenge activity totals"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tmiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/totalstep"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"


                        android:layout_marginTop="15dp"

                        android:layout_toRightOf="@+id/totaldist"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="22,735.81"
                        android:textColor="@color/m_blue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ttoallsteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/totaltext"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/totalstep"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="41,514,232"
                        android:textColor="@color/m_deep_orange"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tmins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_below="@+id/totaldist"
                        android:layout_centerHorizontal="true"

                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/totaltime"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="257,877"
                        android:textColor="@color/zm_ui_kit_color_yellow_FAE280"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/zm_ui_kit_text_size_15sp"
                    android:background="@drawable/round_linear"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnuser"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/totalp"
                        android:backgroundTint="@color/black"></Spinner>

                    <TextView
                        android:id="@+id/totalp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textAlignment="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_mono_medium"
                        android:text="Total participants"
                        android:textSize="16dp" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/zm_view_height_40dp"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="LEADERBOARD"
                    android:textColor="@color/black_light"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="50dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="10dp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Participants"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="135dp"

                            android:fontFamily="@font/roboto_medium"
                            android:text="Total Steps "
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <Spinner
                        android:id="@+id/spinmode"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/totalp"
                        android:backgroundTint="@color/black"></Spinner>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="45dp"
                        android:background="#e8ebf2"></View>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewActiveChallenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/leaderboard"
                    android:layout_margin="7dp"
                    android:padding="10dp">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linearActiveChallenge"
                android:paddingBottom="80dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_gravity="center_vertical"
                    android:text="Create Challenge"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="35dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/btncreate_challenge"/>

                <Button
                    android:layout_gravity="center_horizontal"
                    android:text="Join Challenge"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:id="@+id/btnjoin_challenge"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>



</LinearLayout>