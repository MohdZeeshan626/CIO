<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        foo:navigationIcon="@drawable/ic_action_navigation_close_inverted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/view1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--to show no reports-->
    <LinearLayout
        android:id="@+id/view3"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_no_reports"
            android:text="No Reports"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:fontFamily="@string/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--recyclerview to show list of reports content-->
    <LinearLayout
        android:id="@+id/view2"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:fontFamily="@string/roboto_regular"
                android:textColor="@color/black"
                android:text="Scanned Leads"
                android:gravity="left"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:paddingBottom="10dp"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="40dp"
            android:id="@+id/recyclerView"
            android:minHeight="150dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"
                android:fontFamily="@string/roboto_regular"
                android:text="@string/report_description"
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_send_reminder"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Send Reminder"
                android:textAllCaps="false"
                android:padding="8dp"
                android:visibility="gone"
                android:fontFamily="@string/roboto_regular"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/green_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>