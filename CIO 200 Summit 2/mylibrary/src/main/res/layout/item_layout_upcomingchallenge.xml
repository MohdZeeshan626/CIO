<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentRelative_upcoming"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_UpcomingChallenge_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_upcoming_Challenge_name"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/black"
        android:layout_margin="15dp"
        android:text="Total Steps"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_material"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_more_horiz"
                android:layout_width="35dp"
                android:layout_height="35dp">
            </Button>
        </LinearLayout>
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/txt_Upcoming_Challenge_participants"
            android:fontFamily="@font/roboto_slab_bold"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="8 Participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range_black_24dp"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/txt_upcoming_Challenge_dates"
            android:fontFamily="@font/roboto_slab_bold"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:text="Jun 9 - Jun 15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearStart"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundlinear"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/roundlinear_upcoming">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/rotate" />
        </LinearLayout>
        <TextView

            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"

            android:layout_marginLeft="15dp"
            android:text="@string/challenge_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
           android:layout_marginLeft="5dp"
            android:id="@+id/txt_upcoming_Challenge_startDate"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black"
           android:layout_marginTop="15dp"
            android:text="Tue, Jun 9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_below="@id/linear_UpcomingChallenge_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView

        android:paddingBottom="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_upcoming_challenge_Desc"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/challenge_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="15dp"
                android:background="#e8ebf2"
                android:layout_width="match_parent"
                android:layout_height="2dp"></View>
        <TextView

            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="Created by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_upcoming_Challenge_createdby"
                android:fontFamily="@font/roboto_slab"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="UmmeSul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <LinearLayout

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingBottom="80dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_gravity="center_horizontal"
                android:text="Edit Challenge"
                android:textColor="@color/white"
                android:background="@drawable/rounded_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:padding="5dp"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/btnedit_challenge"/>

            <Button

                android:layout_gravity="center_horizontal"
                android:text="Invite Friends"
                android:textColor="@color/white"
                android:background="@drawable/rounded_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:padding="5dp"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/btn_invite_challenge"/>

        </LinearLayout>
</LinearLayout>

</RelativeLayout>