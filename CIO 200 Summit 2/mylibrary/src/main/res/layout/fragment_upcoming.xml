<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f4f5f9"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_upcoming"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upcoming_challenge"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearUpcoming_chllenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                    android:background="@color/homescreen_bg"
                    android:layout_margin="15dp"
                    android:id="@+id/recyclerviewUpcoming_Challenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/linearUpcoming_chllenge"
                android:paddingBottom="80dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_gravity="center_horizontal"
                    android:text="Create Challenge"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:id="@+id/btncreate_challenge"/>

                <Button
                    android:layout_gravity="center_horizontal"
                    android:text="Join Challenge"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:id="@+id/btnjoin_challenge"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>