<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newuibg"
    android:orientation="vertical"
    tools:context="com.singleevent.sdk.View.RightActivity.admin.bulkprinting.BulkPrintingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        foo:navigationIcon="@drawable/backwhite"
        foo:titleTextColor="@color/white" />

    <!--    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="3">-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:padding="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rpt"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:id="@+id/print_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:ems="5"
                android:background="@drawable/healthpostbut"
                android:padding="8dp"
                android:layout_margin="4dp"

                android:text="Print"
                android:textColor="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rsp"
            android:layout_centerVertical="true"

            android:gravity="center"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/speakerbackground"
            >
            <Spinner
                android:id="@+id/cat_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:backgroundTint="@color/black"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:id="@+id/rsel">
            <TextView
                android:id="@+id/cbtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/select_all_chk"
                android:padding="8dp"
                android:layout_margin="4dp"

                android:text="Select All"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:textSize="13sp"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/select_all_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                />
        </RelativeLayout>







        <!-- <RelativeLayout
             android:id="@+id/print_btn_rl"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="9dp"
             android:layout_weight="1">-->


        <!--</RelativeLayout>-->
        <!--</LinearLayout>-->
    </RelativeLayout>







    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bp_ussrlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <TextView
        android:id="@+id/bp_noitems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fontFamily="@string/roboto_regular"
        android:gravity="center"
        android:text="No attendees available"
        android:textSize="16sp"
        android:visibility="gone" />
</LinearLayout>
