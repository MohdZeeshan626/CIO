<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff4f6fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                android:fitsSystemWindows="true">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/profilepic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:fitsSystemWindows="true"
                        android:layout_marginTop="15dp"
                        app:riv_corner_radius_bottom_left="5dp"
                        app:riv_corner_radius_bottom_right="5dp"
                        app:riv_corner_radius_top_left="5dp"
                        app:riv_corner_radius_top_right="5dp"
                        app:layout_collapseMode="parallax"/>
                    <include
                        android:id="@+id/float_header_view"
                        android:layout_below="@+id/profilepic"
                        layout="@layout/headerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_behavior="com.singleevent.sdk.Custom_View.ViewBehavior" />
                </RelativeLayout>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    app:navigationIcon="@drawable/backwhite"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" >
                    <include
                        android:id="@+id/toolbar_header_view"
                        layout="@layout/footerheaderview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/header_view_end_margin_right"
                        android:visibility="gone" />
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:layout_marginBottom="?attr/actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffb2b3b5"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:fontFamily="@string/roboto_regular"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/chatview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:background="@drawable/speakerbackground"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/chattxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/roboto_regular"
                        android:layout_toLeftOf="@+id/chaticon"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <cyd.awesome.material.AwesomeText
                        android:id="@+id/chaticon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_icon"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:awesome_font="pixeden_stroke"
                        app:awesome_icon="PE_CHAT" />



                    <cyd.awesome.material.AwesomeText
                        android:id="@+id/arrowicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        android:visibility="gone"
                        app:awesome_font="pixeden_stroke"
                        app:awesome_icon="PE_RIGHT_ARROW" />


                </RelativeLayout>



                <TextView
                    android:id="@+id/ucomp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Company"
                    android:ellipsize="end"
                    android:fontFamily="@string/roboto_regular"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/ucompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/speakerbackground"
                    android:fontFamily="@string/roboto_regular"

                    android:layout_marginTop="15dp"
                    android:autoLink="all"
                    android:linksClickable="true"
                    android:textColor="@color/iron"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/ucity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="City"
                    android:fontFamily="@string/roboto_regular"
                    android:ellipsize="end"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/city2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/speakerbackground"
                    android:layout_marginTop="15dp"
                    android:autoLink="all"
                    android:fontFamily="@string/roboto_regular"
                    android:linksClickable="true"
                    android:textColor="@color/iron"
                    android:textSize="18sp" />
                <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                    android:id="@+id/h9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Url"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:customFont="@string/roboto_regular" />


                <TextView
                    android:id="@+id/blog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/speakerbackground"
                    android:layout_marginTop="15dp"
                    android:autoLink="all"
                    android:fontFamily="@string/roboto_regular"
                    android:linksClickable="true"
                    android:textColor="@color/iron"
                    android:textSize="18sp" />


                <com.singleevent.sdk.Custom_View.TxtVCustomFonts
                    android:id="@+id/h8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:customFont="@string/roboto_regular" />


                <TextView
                    android:id="@+id/des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/speakerbackground"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/iron"
                    android:fontFamily="@string/roboto_regular"
                    android:textSize="18sp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chatwithu"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/healthbutton"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:layout_marginTop="15dp"
                    android:text=""
                    android:textSize="14sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout
        android:id="@+id/addinvite"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/transparent_back">


        <TextView
            android:id="@+id/txtinvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:fontFamily="@string/roboto_regular"
            android:text="Invite Meeting"
            android:textColor="#439FD8"
            android:textSize="14sp" />

        <cyd.awesome.material.AwesomeText
            android:id="@+id/inv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/txtinvite"
            android:textColor="#439FD8"
            android:textSize="16sp"
            app:awesome_font="pixeden_stroke"
            app:awesome_icon="PE_PLUS" />

    </RelativeLayout>

</RelativeLayout>



