<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff4f6fa"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:navigationIcon="@drawable/backwhite">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="15dp"
            android:fontFamily="@string/roboto_regular"
            android:text="Group Feeds"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:id="@+id/groupheader"
        >
        <RelativeLayout
            android:id="@+id/leftgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/group_border"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groupimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/usericon"
            ></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Groups"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@string/roboto_regular"
            android:gravity="center"
            android:layout_toRightOf="@+id/groupimage"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="@color/black"

            >
        </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rightgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/group_border"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/groupimage1"
                android:layout_width="35dp"
                android:layout_marginLeft="2dp"

                android:layout_height="35dp"
                android:src="@drawable/addicon"
                ></de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Group"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:fontFamily="@string/roboto_regular"
                android:layout_toRightOf="@+id/groupimage1"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textColor="@color/black"

                >
            </TextView>
        </RelativeLayout>


    </RelativeLayout>
    <View
        android:background="#dddddd"
        android:layout_below="@+id/privacy"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/group_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/gmygroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:onClick="mygrouplist"
            android:layout_marginLeft="35dp"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/healthgrouplayout"

            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:text="My Groups"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ginvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/healthgrouplayout"

            android:onClick="ginvite"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Invited Groups"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </RelativeLayout>
    <View
        android:background="#dddddd"
        android:layout_below="@+id/privacy"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:layout_height="0.5dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff4f6fa"
        android:backgroundTint="#fff4f6fa"
        android:padding="10dp">

        <TextView
            android:id="@+id/grouplisttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/speakerbackground"
            android:gravity="center"
            android:padding="8dp"
            android:text="Group List"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="visible"

            />
    </androidx.cardview.widget.CardView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/grouplist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff4f6fa"
                android:divider="@color/light_gray"
                android:dividerHeight="0dp" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noitems"
        android:text="Not Available"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"

        />


</LinearLayout>
