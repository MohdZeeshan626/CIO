<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/transparent_back"
    android:clipToPadding="false"
    android:clipChildren="false">
    <RelativeLayout
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/re_tile_logo"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/stepcount"
            android:visibility="visible"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            app:riv_corner_radius_bottom_left="0dp"
            app:riv_corner_radius_bottom_right="0dp"
            app:riv_corner_radius_top_left="3dp"
            app:riv_corner_radius_top_right="3dp" />

        <RelativeLayout
            android:id="@+id/logo2_layout"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/logo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0.5dp"
                android:visibility="gone"
                android:src="@drawable/stepcount"
                app:riv_corner_radius_bottom_left="5dp"
                app:riv_corner_radius_bottom_right="5dp"
                app:riv_corner_radius_top_left="5dp"
                app:riv_corner_radius_top_right="5dp" />
        </RelativeLayout>

        <View
            android:id="@+id/split_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/eventname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo2_layout"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:fontFamily="@string/roboto_regular"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:padding="2dp"
            android:text="My Event"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d1"
            android:layout_below="@+id/eventname"
            android:layout_centerHorizontal="true"
            android:padding="10dp">

            <cyd.awesome.material.AwesomeText
                android:id="@+id/cal_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/eventdate"
                android:textSize="12sp"
                app:awesome_font="font_awesome"
                app:awesome_icon="FA_CALENDAR_O"

                app:layout_constraintBottom_toBottomOf="@+id/eventdate"
                app:layout_constraintTop_toTopOf="@+id/eventdate" />
            <TextView
                android:id="@+id/eventdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="20dp"
                android:text="Fri jan 12/2021"
                android:textColor="@color/black"
                android:textSize="12sp" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:text="Tap to complete"
            android:textColor="@color/imagepicker_black_alpha_50"
            android:background="@drawable/zm_ui_kit_btn_round_white_gray_border"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="180dp"
            android:layout_below="@+id/d1"
            android:layout_height="50dp"
            android:id="@+id/challengecomplete"/>

    </RelativeLayout>

</RelativeLayout>