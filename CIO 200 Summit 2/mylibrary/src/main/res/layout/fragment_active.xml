<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f9"
    tools:context=".Fragment.ActiveFragment">


    <TextView
        android:id="@+id/txt_active"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_challenge"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/homescreen_bg"
        android:orientation="vertical"
        android:id="@+id/linearActiveChallenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_transparent"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/txtChallenge_name"
            android:fontFamily="@font/roboto_slab_bold"
            android:textColor="@color/black"
            android:layout_margin="15dp"
            android:text="Total Steps"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_material_active"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_more_horiz"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/txtChallenge_participants"
                android:fontFamily="@font/roboto_slab_bold"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:text="8 Participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_black_24dp"/>

            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/txtChallenge_dates"
                android:fontFamily="@font/roboto_slab_bold"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:text="Jun 9 - Jun 15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:paddingBottom="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp">
            <LinearLayout

                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Users"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="175dp"

                    android:fontFamily="@font/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Steps "/>
            </LinearLayout>
            <View
                android:layout_marginTop="45dp"
                android:background="#e8ebf2"
                android:layout_width="match_parent"
                android:layout_height="2dp"></View>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/homescreen_bg"
            android:layout_margin="15dp"
            android:id="@+id/recyclerviewActiveChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linearActiveChallenge"
                android:paddingBottom="80dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_gravity="center_horizontal"
                    android:text="Create Challenge"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:id="@+id/btncreate_challenge"/>

                <Button
                    android:layout_gravity="center_horizontal"
                    android:text="Join Challenge"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:id="@+id/btnjoin_challenge"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>



</LinearLayout>