<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp"
    android:background="@color/zm_gray_5"
    android:clipToPadding="false"
    android:clipChildren="false">
    <RelativeLayout
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/zm_ui_kit_btn_round_white_gray_border"
        android:elevation="20dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/re_tile_logo"
            android:layout_width="348dp"
            android:layout_height="270dp"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/rect2"
            android:visibility="visible"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:riv_corner_radius_bottom_left="0dp"
            app:riv_corner_radius_bottom_right="0dp"
            app:riv_corner_radius_top_left="0dp"
            app:riv_corner_radius_top_right="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/re_tile_logo"
            android:layout_marginTop="-38dp"
            android:background="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/view"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/eventname"
                android:src="@drawable/addicon">

            </ImageView>

            <TextView
                android:id="@+id/edate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventname"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@string/roboto_regular"
                android:gravity="start"
                android:lineSpacingExtra="0dp"
                android:padding="2dp"
                android:text="1347 joined Jan1- Jan31"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@string/roboto_regular"
                android:gravity="start"
                android:lineSpacingExtra="0dp"
                android:padding="2dp"
                android:text="My Event"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <View
                android:id="@+id/view"
                android:layout_width="300dp"
                android:layout_height="10dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="48dp"
                android:layout_marginTop="0dp"
                android:background="@color/home_blue"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/logo2_layout"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/logo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0.5dp"
                android:visibility="gone"
                android:src="@drawable/stepcount"
                app:riv_corner_radius_bottom_left="5dp"
                app:riv_corner_radius_bottom_right="5dp"
                app:riv_corner_radius_top_left="5dp"
                app:riv_corner_radius_top_right="5dp" />
        </RelativeLayout>

        <View
            android:id="@+id/split_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d1"
            android:layout_centerHorizontal="true"
            android:padding="10dp">




        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>


</RelativeLayout>