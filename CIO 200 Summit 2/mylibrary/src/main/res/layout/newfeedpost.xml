<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff4f6fa"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/sColorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:buttonGravity="center_vertical"

        app:navigationIcon="@drawable/zm_btn_back_white_pressed"
        app:titleMarginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:textSize="17sp"
            android:text="Add Post"
            android:textColor="@color/white" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="15dp"
        android:padding="10dp"
        android:background="@drawable/speakerbackground"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/speakerbackground"
        android:textColor="@color/black"
        android:hint="Write what you think"
        android:padding="25dp">
    </EditText>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
       android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:background="@drawable/healthimagecircle"
            android:src="@drawable/photos"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
android:layout_marginTop="8dp"
            android:background="@drawable/speakerbackground"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:background="@drawable/healthimagecircle"
            android:src="@drawable/videocamera"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/speakerbackground"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:background="@drawable/healthimagecircle"
            android:src="@drawable/tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag Friends"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/speakerbackground"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST"
        android:layout_marginTop="25dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textColor="@color/white"
        android:background="@drawable/healthpostbut"
        android:layout_gravity="center"
        />

</LinearLayout>
