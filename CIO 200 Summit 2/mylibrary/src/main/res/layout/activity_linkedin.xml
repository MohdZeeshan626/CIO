<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".View.LeftActivity.linkedInModule.LinkedInMainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="10dp"
            android:background="@color/theme2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/zm_arrow_left_normal"
                    android:onClick="back"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="LinkedIn"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/c_post"
                    android:onClick="gotoPost" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

<!--        <TextView-->
<!--            android:id="@+id/linkedin_login"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:padding="10dp"-->
<!--            android:layout_marginTop="11dp"-->
<!--            android:layout_marginEnd="30dp"-->
<!--            android:layout_marginStart="30dp"-->
<!--            android:layout_marginBottom="30dp"-->
<!--            android:background="@color/linkedinColor"-->
<!--            android:gravity="center"-->
<!--            android:onClick="LinkedIn_login"-->
<!--            android:text="Login to LinkedIn"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="17sp"-->
<!--            android:visibility="gone" />-->

        <WebView
            android:id="@id/webView"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/message_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="Please connect to LinkedIn to See the Posts!"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"/>
</RelativeLayout>