<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SingleAppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:listDivider">@color/transparent</item>

    </style>


    <!-- Base application theme. -->
    <style name="SingleAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/base</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:typeface">serif</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@color/white</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/sColorPrimary</item>
        <item name="colorPrimaryDark">@color/sColorPrimaryDark</item>
        <item name="colorAccent">@color/sColorPrimary</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/status_bar</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigation_bar
        </item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
    </style>

    <style name="SingleAppNavigationViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">22dp</item>

        <!-- menu item height-->
    </style>

    <style name="Dividerver">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/cardview_shadow_start_color</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/cardview_shadow_start_color</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_custom_bar</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

    <style name="CalendarDialog" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorAccent">@color/sColorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Used for the background -->

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/sColorPrimary</item>
    </style>

    <style name="LetterSectionListItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#898989</item>
    </style>


    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="s_MaterialDialogSheet" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MY.DIALOG" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="CustomProgrss" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/sColorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#000</item>

    </style>
    <!--Health -->
    <style name="Health" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryDark">@color/theme</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SingleAppCustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/s_customprogressbar</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="SingleAppSearchview">
        <item name="android:textColorPrimary">@color/black</item>
        <!-- menu item text size-->
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <!--<item name="android:windowSoftInputMode">adjustPan|adjustResize</item>-->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/sColorPrimary</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>
    <style name="PopupStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/sColorPrimary</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>
    <style name="Widget" />

    <style name="Widget.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_grey_400</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="Widget.DateTime">
        <item name="android:minWidth">75dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_square_date</item>
        <item name="android:textColor">@color/csl_date</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="my_custom_style" parent="@style/Widget.Design.TextInputLayout">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="colorControlNormal">@color/blue_grey_400</item>
    </style>

    <style name="MyOverflowText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="colorControlNormal">@color/blue_grey_400</item>
    </style>

    <style name="ConfirmationTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ConfirmationTextAppearance.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="ConfirmationTextAppearance.SubTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="ConfirmationTextAppearance.Body">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--filter theme-->
    <style name="CheckboxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/sColorPrimary</item>
        // for checked
        <item name="android:textColorSecondary">@color/sColorPrimaryDark</item>
        // for unchecked
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/m_green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
     <!--Health UI-->

<style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">
        @style/BottomSheetStyle
    </item>
</style>
<style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@android:color/transparent</item>
</style>

</resources>
